@model RundownEdu.Models.Show

@{
    ViewData["Title"] = "Delete";
}

<div class="row pb-3">
    <div class="col">
        <h3>Are you sure you want to delete the following rundown?</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)<strong>:</strong>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Active)<strong>:</strong>
            </dt>
            <dd>
                <label class="switch">
                    @Html.DisplayFor(model => model.Active)
                    <span class="slider round"></span>
                </label>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Color)<strong>:</strong>
            </dt>
            <dd>
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @type = "color", @disabled = "true" } })
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
