@model IEnumerable<RundownEdu.Models.Show>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <p>
            <a class="btn btn-outline-primary" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Show</a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" title="View @item.Title"><i class="fas fa-search"></i></a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" title="Edit @item.Title"><i class="fas fa-pen"></i></a>
                        </div>
                    </td>
                    <td>
                        <i class="fas fa-circle" style="color: @item.Color;"></i>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @if (item.Active)
                        {
                            <i class="fas fa-check"></i>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
