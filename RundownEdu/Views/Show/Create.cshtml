@model RundownEdu.Models.Show

@{
    ViewData["Title"] = "Create";
}

<div class="row pb-3">
    <div class="col">
        <h3>New Show</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "font-weight-bold" })<strong>:</strong>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Active)
                <label class="switch">
                    @Html.EditorFor(model => model.Active)
                    <span class="slider round"></span>
                </label>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Color, new { @class = "font-weight-bold" })<strong>:</strong>
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @type = "color" } })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
