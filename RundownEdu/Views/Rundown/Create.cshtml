@model RundownEdu.Models.Rundown

@{
    ViewData["Title"] = "Create";
}

<div class="row pb-3">
    <div class="col">
        <h3>New Rundown</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowId" class="control-label"></label>
                <select asp-for="ShowId" class="form-control" asp-items="ViewBag.Show"></select>
                <span asp-validation-for="ShowId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Active)
                <label class="switch">
                    @Html.EditorFor(model => model.Active)
                    <span class="slider round"></span>
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
