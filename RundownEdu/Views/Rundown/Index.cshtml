@model List<ShowOverviewViewModel>
@*IEnumerable<RundownEdu.Models.Rundown>*@

@{
    ViewData["Title"] = "Rundowns";
}


<div class="row">
    <div class="col">
        <p>
            <a class="btn btn-outline-primary" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Rundown</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col">
        @foreach (var show in Model)
        {
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header" style="background-color: @show.Color;">
                            <div class="row">
                                <div class="col">
                                    <h4>@show.Title</h4>
                                </div>
                                <div class="col-auto">
                                    <div class="btn-group">
                                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@show.Id" data-toggle="tooltip" title="View @show.Title"><i class="fas fa-search"></i></a>
                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@show.Id" data-toggle="tooltip" title="Edit @show.Title"><i class="fas fa-pen"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            @foreach (var rundown in show.Rundowns)
                            {
                                <div class="row">
                                    <div class="col">
                                        Title: @rundown.Title
                                        Start Time: @rundown.StartTime
                                        End Time: @rundown.EndTime
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

